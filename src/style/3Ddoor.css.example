
/* ---------------------------------
This is an example door animation.
--------------------------------- */
 .door {
    width: 100%;
    height: 100%;
    margin: auto;
    border-radius: 4px;
    background-color: #aaa;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 4;
    transition: 250ms linear;
    transform-style: preserve-3d;
    transform-origin: bottom center;
  }
  .back, .door:before {
    content: "";
    width: 100%;
    height: 100%;
    background-color: #1e1e1e;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 3;
    transition: 250ms linear;
    transform: translateZ(-12.5px);
  }
  .edge, .door:after {
    content: "";
    width: 100%;
    height: 12.5px;
    background-color: #1e1e1e;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    transition: 250ms linear;
    transform: rotateX(90deg) translateZ(12.5px);
    transform-origin: bottom center;
  }
  .open .door, .open .door:before, .open .door:after {
    transition-timing-function: cubic-bezier(0, 0, 0, 1);
  }
  .open .door {
    transform: rotateX(-90deg);
    background-color: #1e1e1e;
  }
  .back, .open .door:before {
    background-color: gainsboro;
  }
  .edge, .open .door:after {
    background-color: #aaa;
  }
  